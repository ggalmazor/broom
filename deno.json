{
  "name": "@broom/cli",
  "version": "0.1.0",
  "exports": "./main.ts",
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.7",
    "@std/assert": "jsr:@std/assert@^1.0.0"
  },
  "tasks": {
    "dev": "deno run --allow-run --allow-read --allow-write --allow-env main.ts",
    "test": "deno test --allow-run --allow-read --allow-write --allow-env",
    "test:watch": "deno test --allow-run --allow-read --allow-write --allow-env --watch",
    "compile": "deno compile --allow-run --allow-read --allow-write --allow-env --output=broom main.ts",
    "compile:all": "deno task compile:mac && deno task compile:linux && deno task compile:windows",
    "compile:mac": "deno compile --target=aarch64-apple-darwin --allow-run --allow-read --allow-write --allow-env --output=dist/broom-macos-arm64 main.ts",
    "compile:linux": "deno compile --target=x86_64-unknown-linux-gnu --allow-run --allow-read --allow-write --allow-env --output=dist/broom-linux-x64 main.ts",
    "compile:windows": "deno compile --target=x86_64-pc-windows-msvc --allow-run --allow-read --allow-write --allow-env --output=dist/broom-windows-x64.exe main.ts",
    "install": "deno run --allow-read --allow-write --allow-run --allow-env scripts/install.ts",
    "release": "deno run --allow-read --allow-write --allow-run scripts/release.ts"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "never"
  }
}
